<% if @todo.errors.any? %>
<h2> Error: <%= @todo.errors.full_messages.each do |msg| %><%= msg %><% end %></h2>
<% end %>
<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to list", todos_path %>